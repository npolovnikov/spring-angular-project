<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="20200625-00" author="grigoriev">
        <tagDatabase tag="changelog-2.0"/>
    </changeSet>

    <!--    Student-->
    <changeSet id="20200625-01" author="grigoriev">
        <preConditions onFail="MARK_RAN">
            <and>
                <not>
                    <tableExists tableName="STUDENT" schemaName="public"/>
                </not>
            </and>
        </preConditions>
        <comment>Create STUDENT</comment>
        <sql>
            create table STUDENT (
            id serial primary key,
            idd int not null,
            first_name varchar(50),
            middle_name varchar(50),
            last_name varchar(50),
            passport varchar(15),
            birth_date timestamp,
            create_date timestamp(0) not null,
            delete_date timestamp(0),
            status varchar(10)
            );
        </sql>
        <rollback>
            <sql>
                drop table STUDENT;
            </sql>
        </rollback>
    </changeSet>

