    <!--    Добавление таблицы STUDENT-->
    <changeSet id="30200620-01" author="KusakinFS">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="STUDENT" schemaName="public"/>
            </not>
        </preConditions>
        <comment>Lesson 2. Liquibase. Создание таблицы STUDENT</comment>
        <sql>
            create table STUDENT (
            id serial primary key,
            idd int not null,
            first_name varchar(50),
            middle_name varchar(50),
            last_name varchar(50),
            passport varchar(15),
            contacts varchar(50),
            birth_date timestamp(0),
            create_date timestamp(0) not null,
            delete_date timestamp(0),
            status varchar(10)
            );
        </sql>
        <rollback>
            <sql>
                drop table STUDENT;
            </sql>
        </rollback>
    </changeSet>

