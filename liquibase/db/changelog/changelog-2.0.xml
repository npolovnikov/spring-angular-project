    <changeSet id="20200623-01" author="ivonin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="STUDENT" schemaName="public"/>
            </not>
        </preConditions>
        <comment>Lesson 1. Liquibase Создание таблицы STUDENT</comment>
        <sql>
            create table STUDENT (
            id serial primary key,
            idd int not null,
            first_name varchar(50),
            middle_name varchar(50),
            last_name varchar(50),
            passport varchar(15) unique,
            birth_date timestamp(0),
            create_date timestamp(0) not null,
            delete_date timestamp(0),
            status varchar(10)
            );
            create unique index idx_stud_idd on STUDENT (idd);
        </sql>
        <rollback>
            <sql>
                drop table STUDENT;
            </sql>
        </rollback>
    </changeSet>
